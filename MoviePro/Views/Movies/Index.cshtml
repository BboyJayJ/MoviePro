@model IEnumerable<Movie>

@{
	ViewData["Title"] = "電影院列表";
}

<div class="row">
	@foreach (var item in Model)
	{
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                @item.Name
                                <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Cinema: </b>@item.Cinema.Name</p>
                            <p class="card-text"><b>Category: </b>@item.MovieCategroy</p>
                            <p class="card-text"><b>Start Date: </b>@item.StartDate.ToString("yyyy年 MMMM dd日 ")</p>
                                <p class="card-text"><b>End Date: </b>@item.EndDate.ToString("yyyy年 MMMM dd日 ")</p>
                            <p class="card-text ">
                                <b>Status: </b>
                            @if(DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                            {
                                <span class="badge bg-success text-white">熱映中</span>
                            }
                            else if(DateTime.Now > item.EndDate)
                            {
                                <span class="badge bg-danger text-white">已到期</span>
                                    
                            }else
                            {
                                <span class="badge bg-primary text-white">即將推出</span>
                            }
                        </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-end" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> 查看詳細資料</a>
                                <a class="btn btn-success text-white"> <i class="bi bi-cart-plus"></i> 加到購物車(Price @item.Price.ToString("c"))</a>                                               
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
	}
</div>

<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="Movies" asp-action="Create" class="btn btn-success"> 
    <i class="bi bi-plus-circle"></i> 新增電影 </a>
</div>