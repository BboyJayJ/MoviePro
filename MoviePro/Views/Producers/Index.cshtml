@model IEnumerable<Producer>

@{
	ViewData["Title"] = "製作人列表";
}

<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table">
			<thead>
				<tr class="text-center">
					<th>@Html.DisplayNameFor(model => model.PictureUrl)</th>
					<th>@Html.DisplayNameFor(model => model.FullName)</th>
					<th>@Html.DisplayNameFor(model => model.Bio)</th>
					<th>按鈕</th>

				</tr>
			</thead>
			<tbody class="text-center">
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src="@item.PictureUrl" alt="@item.FullName" style="max-width:150px" />
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.FullName)
						</td>
						<td class="align-middle col-md-5">
							@Html.DisplayFor(modelItem => item.Bio)
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> 編輯</a>
							<a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> 詳細資料</a>
							<a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id">><i class="bi bi-trash"></i>刪除</a>

						</td>
					</tr>
				}
			</tbody>


		</table>




	</div>
</div>

<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
	<a asp-controller="Producers" asp-action="Create" class="btn btn-success"> 
	<i class="bi bi-plus-circle"></i> 新增製作人></a>
</div>